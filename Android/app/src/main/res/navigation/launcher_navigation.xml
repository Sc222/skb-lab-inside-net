<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/launcherFragment">
    <fragment
        android:id="@+id/launcherFragment"
        android:name="com.sc222.insidenet.ui.launch.LauncherFragment"
        android:label="fragment_launcher"
        tools:layout="@layout/fragment_launcher">
        <action
            android:id="@+id/action_launcherFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:popUpTo="@+id/profileActivity"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_launcherFragment_to_authActivity"
            app:destination="@id/authActivity"
            app:popUpTo="@+id/authActivity"
            app:popUpToInclusive="true" />
    </fragment>
    <activity
        android:id="@+id/profileActivity"
        android:name="com.sc222.insidenet.ui.proflie.ProfileActivity"
        android:label="ProfileActivity" />
    <activity
        android:id="@+id/authActivity"
        android:name="com.sc222.insidenet.ui.auth.AuthActivity"
        android:label="AuthActivity" />
</navigation>