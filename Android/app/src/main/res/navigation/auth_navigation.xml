<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sc222.insidenet.ui.login.LoginFragment"
        android:label="@string/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:popUpTo="@+id/profileActivity"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.sc222.insidenet.ui.register.RegisterFragment"
        android:label="@string/fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:popUpTo="@+id/profileActivity"
            app:popUpToInclusive="true" />
    </fragment>
    <activity
        android:id="@+id/profileActivity"
        android:name="com.sc222.insidenet.ui.proflie.ProfileActivity" />
</navigation>